<!DOCTYPE html>

<html lang="{{ LANGUAGE_CODE }}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}{{ information.title|defaults('dlvpef') }}{% endblock %}</title>

    <link rel="stylesheet" href="{{ static('lib/bootstrap/3.3.6/css/bootstrap.min.css') }}" />
    <link rel="stylesheet" href="{{ static('this/css/style.css') }}" />
    <link rel="stylesheet" href="{{ static('this/css/media.css') }}" />
    <link rel="stylesheet" href="{{ static('this/css/expansions.css') }}" />

    {# SEO #}
    {% if information.seo_title %}
        <meta name="title" content="{{ information.seo_title }}" />
        <meta property="og:title" content="{{ information.seo_title }}" />
    {% endif %}

    {% if information.seo_keywords %}
        <meta name="keywords" content="{{ information.seo_keywords }}" />
    {% endif %}

    {% if information.seo_description %}
        <meta name="description" content="{{ information.seo_description }}" />
        <meta property="og:description" content="{{ information.seo_description }}" />
    {% endif %}

    {#
    <meta property="og:image" content="" />
    <link rel="image_src" href="" />
    <meta property="vk:image" content="" />
    #}

    {% block css %}{% endblock %}
</head>
<body {% block angularjsdata %}{% endblock %}>
    {% block content %}{% endblock %}
    <footer>
        <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 foot">
            <div class="copy">
                &copy; 2015 DLVPEF
            </div>
            <div class="cons">
                Conception et d√©veloppement<br />
                <a href="#" class="inf">Informations sur le site web</a>
            </div>
            <div class="liv">
                <a href="https://www.livarava.com/" title="livarava">
                    <img src="{{ static('this/images/logo_livarava.png') }}"/>
                </a>
            </div>
        </div>
    </footer>

    {% block js %}
        <script src="{{ static('lib/jquery/2.1.4/jquery-2.1.4.min.js') }}"></script>
        <script src="{{ static('lib/bootstrap/3.3.6/js/bootstrap.min.js') }}"></script>
    {% endblock %}
</body>
</html>
